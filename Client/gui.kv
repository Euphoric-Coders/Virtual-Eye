#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    VideoScreen:
    MainScreen:
    NameScreen:
    InitiatingScreen:

<VideoScreen>:
    name: "Video"
    FloatLayout:
        Video:
            size_hint: 0.7, 0.7
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            source: "Animation.mp4"
            state: "play"
            on_eos: app.root.current = "Main"

<InitiatingScreen>:
    name: "Initiate"
    FloatLayout:
    
        Label:
            text: "Inititating..."
            font_size: 35
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Button:
            text: "STOP"
            pos_hint: {"center_x": 0.5, "center_y": 0.30}
            size_hint: 0.5, 0.1
            font_size: 25
            on_release: 
                app.root.current = "Main"
                #file.close()


            

<MainScreen>:
    name: "Main"
    FloatLayout:

        Image:
            source: "logo.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
   
        Button:
            text: "INITIATE"
            color: 1, 1, 1, 1
            font_size: 30
            size_hint: 0.7, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_release: 
                app.root.current = "Initiate"
                file = open("Main_client.py")
                read = file.read()
                exec(read)

        Button:
            text: "SETTINGS"
            color: 1, 1, 1, 1
            font_size: 15
            size_hint: 0.4, 0.1
            pos_hint: {"right": 1, "top":1}
            on_release: app.root.current = "Name"

<NameScreen>:
    name: "Name"
    FloatLayout:
        TextInput:
            id: login
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 0.7, 0.1
            font_size: 35
        Label:
            text: "Enter your name:"
            font_size: 30
            pos_hint: {"center_x": 0.5, "center_y": 0.6}

        Button:
            text: "ENTER"
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            size_hint: 0.5, 0.1
            font_size: 30
        Button:
            text: "BACK"
            pos_hint: {"left": 1, "top": 1}
            size_hint: 0.3, 0.1
            font_size: 15
            on_release: app.root.current = "Main"



        



        
    
        

    